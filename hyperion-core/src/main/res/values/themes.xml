<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Hype.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/hype_white</item>
        <item name="colorAccent">@color/hype_enabled</item>
        <item name="android:textColorPrimary">@color/hype_text</item>
        <item name="android:textColorSecondary">@color/hype_disabled</item>
        <item name="android:listDivider">@drawable/hype_horizontal_divider</item>
    </style>

    <style name="Hype.Base.Drawer">
        <item name="android:windowBackground">@color/hype_menu_background</item>
        <item name="android:textColorPrimary">@color/hype_plugin_text</item>
    </style>

    <style name="Hype.Base.Inspect">
        <item name="android:windowBackground">@color/hype_inspect_background</item>
    </style>

</resources>
