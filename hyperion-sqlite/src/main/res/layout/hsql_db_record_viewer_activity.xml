<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.records.DbRecordViewerActivity"
    android:id="@+id/root">
    <com.willowtreeapps.hyperion.sqlite.ui.CustomHorizontalScrollView
        android:id="@+id/table_horizontal_scroll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay">
        <com.willowtreeapps.hyperion.sqlite.ui.CustomScrollView
            android:id="@+id/table_vertical_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </com.willowtreeapps.hyperion.sqlite.ui.CustomScrollView>
    </com.willowtreeapps.hyperion.sqlite.ui.CustomHorizontalScrollView>
</LinearLayout>