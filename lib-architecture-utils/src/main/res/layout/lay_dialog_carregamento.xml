<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:viewBindingIgnore="true">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/lay_dialog_carregamento_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/lay_dialog_carregamento_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Carregando..."
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/lay_dialog_carregamento_progress"/>

    <TextView
        android:id="@+id/lay_dialog_carregamento_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/lay_dialog_carregamento_titulo"/>

</RelativeLayout>